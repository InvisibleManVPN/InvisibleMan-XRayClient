<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Confirm Rectangle Button -->
    <ControlTheme x:Key="Button.Rectangle.Confirm" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Color.Button.Confirm.Normal}"/>
        <Setter Property="Foreground" Value="{StaticResource Color.Text.Button}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Rectangle Fill="{TemplateBinding Background}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>

                    <ContentPresenter x:Name="PART_ContentPresenter"
                        Content="{TemplateBinding Content}"
                        Margin="{TemplateBinding Padding}"
                        FontWeight="Bold" FontSize="12"
                        VerticalAlignment="Center"
                        TextAlignment="Center"/>
                </Panel>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{StaticResource Color.Button.Confirm.Highlight}"/>
        </Style>

        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{StaticResource Color.Button.Confirm.Press}" />
        </Style>
    </ControlTheme>

